<h1>Signup</h1>
<br />
<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages' %>

  <table>
    <tr><td>Name:</td><td><%= f.text_field :name %></td></tr>
    <tr><td>Email:</td><td><%= f.text_field :email %></td></tr>
    <tr><td>Password:</td><td><%= f.password_field :password %></td></tr>
    <tr><td>Confirm password:</td><td><%= f.password_field :password_confirmation %></td></tr>
    <tr><td>&nbsp;</td></tr>
    <tr><td></td><td><%= f.submit "Create my account" %></td></tr>
  </table>
<% end %>