<p id="notice"><%= notice %></p>

<h1>Listing Intents</h1>

<table>
  <thead>
    <tr>
      <th>Context</th>
      <th>Name</th>
      <th>Description</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @intents.each do |intent| %>
      <tr>
        <td><%= intent.context_id %></td>
        <td><%= intent.name %></td>
        <td><%= intent.description %></td>
        <td><%= intent.active %></td>
        <td><%= link_to 'Show', intent %></td>
        <td><%= link_to 'Edit', edit_intent_path(intent) %></td>
        <td><%= link_to 'Destroy', intent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

